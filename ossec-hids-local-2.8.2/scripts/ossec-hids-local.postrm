#!/bin/sh
# postrm script for ossec-hids-server

set -e


# Remove users
if getent passwd | grep -q "^ossecr:"
then
    deluser ossecr
fi

if getent passwd | grep -q "^ossecm:"
then
    deluser ossecm
fi

if getent passwd | grep -q "^ossec:"
then
    deluser ossec
fi

# Remove group
if getent group | grep -q "^ossec:"
then
    delgroup ossec
fi
